<!-- views/urls_index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>TinyApp</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <style>
      body {
        padding-top: 20px;
        padding-bottom: 20px;
      }

      .jumbotron {
        margin-top: 10px;
      }
      form {
        padding-top: 20px;
        padding-bottom: 20px;
      }
      td {
        align-content: center;
        padding: 10px;
        border: 2px solid black;
      }
      td#noBorder {
        border: 0px;
      }
    </style>
  </head>

  <body>
    <div class="container">
        <%- include('partials/_header') %>
        <div class="jumbotron">
          <h1>Welcome to TinyApp</h1>
          <p class="lead">Below are all of the shortened URLs available!</p>
    </div>


    <div class="container">
      <table>
        <tr>
          <td><b>Short URL</b></td>
          <td><b>Leads to</b></td>
          <td align="center"><b>Destination URL</b></td>
          <td colspan="2" align="center"><b>Actions</b></td>
        </tr>
        <% for (let urlKey in urls) { %>
          <tr>
            <td><%= urlKey %></td>
            <td><b>===></b></td>
            <td><%= urls[urlKey] %></td>
            <td><a href="/urls/<%= urlKey %>">Modify</a>
            <td>
            <form method="POST" action="/urls/<%= urlKey %>/delete">
            <input type="submit" value="Delete">
            </form>
            </td>
          </tr>
        <% } %>
      </table>
    </div>
    <div class="container">
      <h3><a href="/urls/new">Create a new shortened URL</a></h3>
    </div>
  </body>
</html>