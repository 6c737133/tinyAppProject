<!-- views/urls_new.ejs -->



<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>TinyApp</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <style>
    body {
      padding-top: 20px;
      padding-bottom: 20px;
    }

    .jumbotron {
      margin-top: 10px;
    }
    form {
      padding-top: 20px;
      padding-bottom: 20px;
    }
  </style>
</head>

<body>
  <div class="container">
    <%- include('partials/_header') %>
    <div class="jumbotron">
      <h1>Welcome to TinyApp</h1>
      <p class="lead">Fill out the below details and shorten a URL!</p>
    </div>
  </div>

  <div class="container">
    <div class="col-lg-12">
      <form action="/urls" method="POST" style="margin:10px;">
      <label for="longURL">Enter a URL:</label>
      <input id="longURL" type="text" name="longURL" placeholder="http://" style="width: 300px">
      <input type="submit" value="Submit">
    </form>
    </div>
  </div>
</body>

</html>