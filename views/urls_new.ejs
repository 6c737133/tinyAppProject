<!-- views/urls_new.ejs -->

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>TinyApp</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
  </head>

  <body>
    <div class="container">
      <%- include('partials/_header') %>
      <div class="jumbotron">
        <h1>Welcome to TinyApp</h1>
        <p class="lead">Fill out the below details and shorten a URL!</p>
      </div>
    </div>

    <div class="container">
      <div class="col-lg-12">
        <form action="/urls" method="POST" style="margin:10px;">
        <label for="longURL">Enter a URL:</label>
        <input id="longURL" type="text" name="longURL" placeholder="http://" style="width: 300px">
        <input type="submit" value="Submit">
      </form>
      </div>
    </div>
  </body>
</html>